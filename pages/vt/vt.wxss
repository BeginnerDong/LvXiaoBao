page{
	background: #f5f5f5;
  padding-bottom: 160rpx;
}
.all{
  padding:40rpx 5%; 
	background: #fff;
}
.vt{
	width: 100%;
	height: 200rpx;
	border-radius: 20rpx;
	background:linear-gradient(124deg,rgba(66,223,136,1) 0%,rgba(22,192,166,1) 100%);
	box-shadow:0px 16rpx 44rpx 0px rgba(213,213,213,0.09);
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.vt:last-child{
  margin-bottom: 0rpx;
}
.vt-left{
	width: 80%;
	height: 200rpx;
}
.left-img{
	width: 95%;
	height: 100rpx;
	display: flex;
}
.vt-imga{
	width: 60%;
	padding-top: 26rpx;
	text-align: left;
}
.vt-imga image{
	width: 148rpx;
	height: 62rpx;
}
.vt-img{
	width: 20%;
	padding-top: 26rpx;
	text-align: center;
}
.vt-img image{
	width: 64rpx;
	height: 64rpx;
}
.vt-con{
	width: 20%;
  padding: 40rpx 0;
  text-align: center;
}
.vt-con image{
	width: 40rpx;
	height: 40rpx;
}
.vt-title{
	width: 100%;
	height: 100rpx;
	display: flex;
  align-items: center;
}
.vt-name{
	color: #FFFFFF;
	font-size: 48rpx;
	margin-left: 26rpx;
}
.vt-namea{
	color: #FFFFFF;
	font-size: 28rpx;
	text-decoration: line-through;
	margin-left: 40rpx;
  padding-top: 10rpx;
}
.set{
  padding: 0 3%;
	margin-top: 40rpx;
	background: white;
}
.set-name{
	width: 100%;
	font-size: 32rpx;
	font-weight:bold;
	color:rgba(50,50,50,1);
	position: relative;
	z-index:1;
	padding-top: 10rpx;
	height: 100rpx;
	line-height:100rpx;
	border-bottom: 2rpx solid #E7E7E7;
}
.title-line {
	width: 32rpx;
	height: 6rpx;
	background: rgba(255, 209, 1, 1);
	border-radius: 4rpx;
	position:absolute;
	z-index:-1;
	left:3%;
	bottom: 24rpx;
}
.set-con{
	width: 100%;
	height: 100rpx;
	display: flex;
	line-height: 100rpx;
	border-bottom: 2rpx solid #E7E7E7;
}
.set-img{
	width: 10%;
	text-align: center;
}
.set-img image{
	width: 40rpx;
	height: 40rpx;
  vertical-align: middle;
}
.set-title{
	width: 70%;
	margin-left: 2%;
	font-size: 32rpx;
	color: #333;
	font-weight: bold;
}
.setimga{
	width: 20%;
  text-align: center;
}
.setimga image{
	width: 40rpx;
	height: 40rpx;
}
.specli{
	padding: 0 3%;
	background: #f5f5f5;
	z-index: 111;
}
.specli .set-name{
  border-bottom: none;
  height: 80rpx;
  line-height: 80rpx;
}
.set-names{
	font-size: 28rpx;
	margin-bottom: 10rpx;
  color: #666;
}
.count{
	width: 100%;
  padding: 0 3%;
  box-sizing: border-box;
	height: 120rpx;
	display: flex;
  justify-content: space-between;
  align-items: center;
	background: white;
	position: fixed;
	bottom: 0;
	z-index: 2222;
  box-shadow: 0 -4rpx 10rpx rgba(0,0,0,0.1);
}
