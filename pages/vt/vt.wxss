.count-btn{
	width: 50%;
	height: 80rpx;
	border-radius: 60rpx;
	background:linear-gradient(90deg,rgba(255,88,43,1) 0%,rgba(255,123,87,1) 100%);
	color: white;
	text-align: center;
	line-height: 80rpx;
	font-weight: bold;
	font-size: 32rpx;
}