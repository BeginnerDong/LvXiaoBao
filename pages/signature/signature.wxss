page{
	background: #D5D5D5;
}
.sign{
	width: 100%;
	background: white;
  padding-bottom: 40rpx
}
.sign-title{
	font-size: 32rpx;
	font-family:PingFang-SC-Bold;
	font-weight:bold;
	color:rgba(50,50,50,1);
	position: relative;
	z-index:1;
	padding-top:10rpx;
	height: 80rpx;
	line-height: 80rpx;
	padding:0 5%;
}
.title-line {
	width: 32rpx;
	height: 6rpx;
	background: rgba(255, 209, 1, 1);
	border-radius: 4rpx;
	position:absolute;
	z-index:-1;
	left:5%;
	bottom: 24rpx;
}
.sign-add{
	width: 100%;
	height: 300rpx;
	margin-left: 40%;
}
.add{
	width: 200rpx;
	height: 200rpx;
	text-align: center;
	line-height: 200rpx;
	background: #F2F2F2;
	border-radius: 16rpx;
}
.add image{
	width: 30rpx;
	height: 30rpx;
}
.sign-name{
	height:70rpx;
	line-height: 70rpx;
	color: #585858;
	padding:0 5%;
	font-size: 24rpx;
	font-weight:500;
}
.btn{
	width: 100%;
  padding: 80rpx 0;
}
.btn span{
	width: 600rpx;
	height: 88rpx;
	line-height: 88rpx;
	display: block;
	color: white;
	background:linear-gradient(90deg,rgba(255,88,43,1) 0%,rgba(255,123,87,1) 100%);
	margin:0rpx auto;
	text-align: center;
	border-radius: 60rpx;
	font-size: 34rpx;
	font-weight: bold;
}