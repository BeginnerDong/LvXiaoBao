page{
	background: #D5D5D5;
}
.sign{
	width: 100%;
	height: 440px;
	background: white;
}
.sign-title{
	width: 100%;
	font-size: 16px;
	font-family:PingFang-SC-Bold;
	font-weight:bold;
	color:rgba(50,50,50,1);
	position: relative;
	z-index:1;
	padding-top: 3px;
	height: 40px;
	line-height: 40px;
	padding-left: 5%;
}
.title-line {
	width: 16px;
	height: 3px;
	background: rgba(255, 209, 1, 1);
	border-radius: 2px;
	position:absolute;
	z-index:-1;
	left:5%;
	bottom: 12px;
}
.sign-add{
	width: 100%;
	height: 150px;
	margin-left: 40%;
}
.add{
	width: 100px;
	height: 100px;
	text-align: center;
	line-height: 100px;
	background: #F2F2F2;
	border-radius: 8px;
}
.add image{
	width: 15px;
	height: 15px;
}
.sign-name{
	width: 100%;
	height: 35px;
	line-height: 35px;
	color: #585858;
	padding-left: 5%;
	font-size: 12px;
	font-weight:500;
}
.btn{
	width: 100%;
	height: 40px;
	margin-top: 20px;
}
.btn span{
	width: 300px;
	height: 48px;
	line-height: 48px;
	display: inline-block;
	color: white;
	background:linear-gradient(90deg,rgba(255,88,43,1) 0%,rgba(255,123,87,1) 100%);
	margin-left: 10%;
	text-align: center;
	border-radius: 30px;
	font-size: 17px;
	font-weight: bold;
}