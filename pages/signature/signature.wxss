page{
	background: #D5D5D5;
}
.sign{
	width: 100%;
	height: 440px;
	background: white;
}
.sign-title{
	width: 100%;
	height: 40px;
	color: #323232;
	font-size: 16pt;
	font-weight: 600;
	padding-left: 4%;
}
.sign-add{
	width: 100%;
	height: 150px;
	margin-left: 40%;
}
.add{
	width: 100px;
	height: 100px;
	text-align: center;
	line-height: 100px;
	background: #DBDBDB;
}
.add image{
	width: 20px;
	height: 20px;
	border: 1px dashed #000000;
}
.sign-name{
	width: 100%;
	height: 35px;
	line-height: 35px;
	color: #585858;
	padding-left: 5%;
	font-size: 12px;
	font-weight:500;
}


.btn{
	width: 100%;
	height: 40px;
	margin-top: 20px;
}
.btn span{
	width: 300px;
	height: 50px;
	line-height: 50px;
	display: inline-block;
	color: white;
	background: #FF7B57;
	margin-left: 16%;
	text-align: center;
	border-radius: 30px;

}