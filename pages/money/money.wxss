page{
	background: #E0E0E0;
}
.all{
	width: 100%;
	height: 160px;
	background: white;
	padding-top: 4%;
}
.balance{
	width: 90%;
	height: 150px;
	box-shadow:0px 2px 3px 0px rgba(231,231,231,1);
	background: #fc5e43;
	margin-left: 5%;
	border-radius: 10px;
	border: 0.0625rem dashed #000000;
}
.bala-top{
	height: 50px;
	display: flex;
	line-height: 50px;
	padding-left: 3%;
}
.bala-name{
	width: 80%;
	color: #FFFFFF;
	font-size: 16px;
}
.bala-img{
	width: 20%;
	margin-top: 5px;
}
.bala-img image{
	width: 50px;
	height: 20px;
}
.bala-cen{
	padding-left: 3%;
	color: #FFFFFF;
	font-size: 24px;
	font-weight: 800;
}
.bott-img{
	width: 10%;
	padding-left: 5%;
	margin-top: 3px;
}
.bott-img image{
	width: 15px;
	height: 15px;
	border: 1px dashed #000000;
}
.bala-bottom{
	width: 100%;
	height: 50px;
	margin-top: 10px;
	line-height: 50px;
	display: flex;
}
.bott-left{
	width: 60%;
	display: flex;
}
.bott-con{
	width: 70%;
	color: #FFFFFF;
	font-size: 13px;
	margin-left: 2%;
}
.bott-right{
	width: 40%;
	display: flex;
}
.right-con{
	width: 70%;
	tab-size: right;
	color: #FFFFFF;
	font-size: 15px;
}
.right-img{
	width: 10%;
	margin-top: 3px;
}
.right-img image{
	width: 15px;
	height: 15px;
	border: 1px dashed #000000;
}
.recharge{
	margin-top: 2%;
	width: 100%;
	height: 140px;
	background: white;
}
.chan-top{
	width: 100%;
	height: 65px;
	display: flex;
	border-bottom: 1px solid #A1A1A1;
	margin-top: 10px;
}
.chan-title{
	width: 90%;
	height: 65px;
	color: #323232;
	font-size: 15px;
	line-height:65px;
	font-weight: bold;
	padding-left: 5%;
}
.chan-img{
	width: 10%;
	height: 65px;
	line-height: 65px;
}
.chan-img image{
	width: 15px;
	height: 15px;
	
}
.statist{
	width: 100%;
	height: 500px;
	background: white;
	margin-top: 20px;
}
.ststist-title{
	width: 100%;
	height: 40px;
	padding-left: 3%;
	color: #323232;
	font-size: 16px;
	font-weight: bold;
	padding-top: 4%;
}
.stat-name{
	width: 100%;
	height: 100px;
	display: flex;
}
.name{
	width: 45%;
	height: 80px;
	margin-left: 4%;
	border-radius: 20px;
	background: #F2F2F2;
	display: flex;
}
.name-img{
	width: 30%;
	text-align: center;
	height: 80px;
	line-height: 80px;
	
}
.name-img image{
	width: 20px;
	height: 20px;
	border: 1px dashed #000000;
}
.name-title{
	width: 60%;
	margin-left: 4%;
	margin-top: 10px;
}
.name-con{
	width: 100%;
	height: 20px;
	color: #A1A1A1;
	font-size: 13px;
	line-height: 20px;
}
.name-conter{
	width: 100%;
	height: 20px;
	color: #323232;
	font-size: 18px;
	line-height: 20px;
	margin-top: 5%;
	font-weight: 800;
}
