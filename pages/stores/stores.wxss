}

.detail{
	width: 100%;
	height: 200px;
	background: #C0C0C0;
}
.detail-name{
	padding-left: 3%;
	padding-top: 5%;
	color: #323232;
	font-size: 16pt;
	font-weight: 600;
}
.detail-con{
	width: 100%;
	height: 60px;
	padding-left: 3%;
	color: #A1A1A1;
	font-size: 13pt;
}
.btn{
	width: 100%;
	height: 50px;
	margin-top: 20px;
}
.btn span{
	width: 300px;
	height: 40px;
	text-align: center;
	line-height: 40px;
	display: inline-block;
	border-radius: 30px;
	font-size: 17pt;
	color: #FFFFFF;
	background: #FF7B57;
	opacity: 0.2;
	margin-left: 10%;
}