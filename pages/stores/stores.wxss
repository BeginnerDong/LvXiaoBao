.eduit{
	width: 100%;
	height: 400px;
}
.peo-name{
	width: 100%;
	height: 50px;
	display: flex;
	/* justify-content: center; */
	padding: 0 3%;
}
.peo-con{
	width: 30%;
	height: 50px;
	font-size: 14px;
	color: #585858;
	opacity: 1;
	
}
.peo-content{
	width: 70%;
	height: 50px;
	display: flex;
}
.peo-content input{
	width: 60%;
	height: 40px;
