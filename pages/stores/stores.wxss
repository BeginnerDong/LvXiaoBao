.eduit{
	width: 100%;
	height: 400px;
}
.peo-name{
	width: 100%;
	height: 50px;
	display: flex;
	line-height: 50px;
	/* justify-content: center; */
	padding: 0 3%;
	border: 1px solid #E7E7E7;
}
.peo-con{
	width: 30%;
	height: 50px;
	font-size: 16px;
	color:#323232;
	line-height: 50px;
	font-weight:500;
}
.peo-con1{
	width: 85%;
	height: 50px;
	font-size: 16px;
	color:#323232;
	line-height: 50px;
	font-weight:500;
}
.card-img1{
	width: 15%;
	height: 50px;
	line-height: 50px;
}
.card-img1 image{
	width: 15px;
	height: 15px;
}
.peo-content{
	width: 70%;
	height: 50px;
	display: flex;
}
.peo-content input{
	width: 60%;
	height: 50px;
	border: none;
	font-size: 10px;
	color: #A1A1A1;
	line-height: 50px;
	opacity: 1;
}
.card-img{
	width: 20%;
	height: 50px;
	line-height: 50px;
	text-align:right;
	margin-right: 15%;
}
.card{
	width: 80%;
	
}
.card input{
	width: 60%;
	height: 50px;
	border: none;
	font-size: 14px;
	color: #A1A1A1;
	opacity: 1;
	line-height: 50px;
	
}
.card-img image{
	width: 15px;
	height: 15px;
}

.peo-content1{
	font-size: 14px;
	color: #323232;
}
.peo-content1 input{
	width: 70%;
	height: 50px;
	border: none;
	font-size: 14px;
	color: #A1A1A1;
	line-height: 50px;
	opacity: 1;
}
.detail{
	width: 100%;
	height: 200px;
	background: #F4F3F3;
}
.detail-name{
	width: 100%;
	font-size: 16px;
	font-family:PingFang-SC-Bold;
	font-weight:bold;
	color:rgba(50,50,50,1);
	position: relative;
	z-index:1;
	padding-top: 3px;
	height: 50px;
	line-height: 50px;
	padding-left: 5%;
}
.title-line {
	width: 16px;
	height: 3px;
	background: rgba(255, 209, 1, 1);
	border-radius: 2px;
	position:absolute;
	z-index:-1;
	left:5%;
	bottom: 17px;
}
.detail-con{
	width: 100%;
	height: 45px;
	padding-left: 3%;
	color: #A1A1A1;
	font-size: 13px;
	line-height: 25px;
	font-weight: 500;
}
.btn{
	width: 100%;
	height: 50px;
	margin-top: 20px;
}
.btn span{
	width: 300px;
	height: 48px;
	text-align: center;
	line-height: 48px;
	display: inline-block;
	border-radius: 30px;
	font-size: 17px;
	color: #FFFFFF;
	background: #FF7B57;
	opacity: 0.2;
	margin-left: 10%;
	font-weight: bold;
}