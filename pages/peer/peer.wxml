<view>
	<view class="top">
		<view class="search">
			<input placeholder="领秀华夏" />
			<view class="searchBtn" bindtap="intoPath" data-path="/pages/search/search">
				<image src="../../image/index-icon2.png" />
			</view>
		</view>
		
	</view>
	<view class="nav-top flex-align">
		<view class="nav-top-item nav-top-item-active">全部
			<view class="title-line" style="left: 30%;"></view>
		</view>
		<view class="nav-top-item">国内</view>
		<view class="nav-top-item">出境</view>
		<view class="nav-top-item" style="border-right:1px solid #A1A1A1">周边</view>
		<view class="nav-top-item flex-all" bindtap="isShow">
			<view>筛选</view>
			<view class="flex-all">
				<image src="../../image/peer-icon1.png"></image>
			</view>	
		</view>
	</view>
	
	<block wx:for="{{web_mainData}}" wx:key="id">
		<view class="peer">
			<view class="peer-top flex">
				<view style="width:80%">
					<view class="flex-align">
						<view class="color1 font18 bold-font">{{item.brand}}</view>
						<view class="color2 font12 bold-font" style="margin-left: 16rpx;">{{item.province}}·{{item.city}}</view>
						<view class="flex-all qian" style="margin-left: 26rpx;" wx:if="{{item.signNum==1}}">
							<image src="../../image/peer-icon6.png"></image>
						</view>
					</view>
					<view class="font15 color1" style="margin-top:16rpx;">{{item.companyName}}</view>
				</view>
				<view style="width:20%" class="flex-all" bindtap="intoPath" data-path="/pages/salers/salers">
					<view class="phone">
						<image src="../../image/detail-icon3.png"></image>
					</view>
				</view>
			</view>
			<view class="peer-middle" bindtap="intoPath" data-path="/pages/productListPlate/productListPlate">
				<view class="flex-align" style="margin-top: 14rpx;">
					<view class="zhuying font14 color1 bold-font">主营业务</view>
					<view class="font14 color1">{{item.businessTypeName}}</view>
				</view>
				<view class="font14 color1" style="margin-top: 16rpx;">海南专线/北京专线/桂林专线/华东专线/普吉专线/巴黎专线/泰国专线/日韩专线/欧洲专线...</view>
			</view>
			<view class="peer-bottom flex-align">
				<view class="peer-bottom-item flex-all">
					<view class="flex-all ">
						<image src="../../image/peer-icon2.png" />
					</view>
					<view class="font13 color2" style="margin-left: 18rpx;">{{item.prodNum}}件</view>
				</view>
				<view class="peer-bottom-item flex-all">
					<view class="flex-all">
						<image src="../../image/peer-icon3.png" />
					</view>
					<view class="font13 color2" style="margin-left: 18rpx;">{{item.likeNum}}</view>
				</view>
				<view class="peer-bottom-item flex-all">
					<view class="flex-all">
						<image src="../../image/peer-icon4.png" />
					</view>
					<view class="font13 color2" style="margin-left: 18rpx;">{{item.laudNum}}</view>
				</view>
			</view>
		</view>
	</block>
	<view style="width:100%;height:130rpx"></view>
	<view class="navbar">
		<view class="navbar_item">
			<view class="nav_img">
				<image src="../../image/cod.png" style="width: 16px;height: 23px;margin-top: 6px;"></image>
			</view>
			<view class="text ">微店</view>
		</view>
		<view class="navbar_item" bindtap="intoPathRedirect" data-path="/pages/information/information">
			<view class="nav_img">
				<image src="../../image/peer-icon5.png" ></image>
			</view>
			<view class="text this-text">同行</view>
		</view>
		<view class="navbar_item" bindtap="intoPathRedirect" data-path="/pages/questionBank/questionBank">
			<view class="nav_img">
				<image src="../../image/index-icon6.png"></image>
			</view>
			<view class="text">首页</view>
		</view>
		<view class="navbar_item" bindtap="intoPathRedirect" data-path="/pages/order/order">
			<view class="nav_img">
				<image src="../../image/index-icon5.png" ></image>
			</view>
			<view class="text">订单</view>
		</view>
		<view class="navbar_item" bindtap="intoPathRedirect" data-path="/pages/mine/mine">
			<view class="nav_img">
				<image src="../../image/index-icon7.png" ></image>
			</view>
			<view class="text">我的</view>
		</view>
	</view>
	<view class="advert" bindtap="isShow" wx:if="{{web_show}}">
	</view>
	<view class="top1" wx:if="{{web_show}}">
		<view class="top-top">
			<view class="top-title">
				业务分类
				<view class="title-line" style="left:4%"></view>
			</view>
				<view class="choose">
					<view class="choose-item" style="color:rgba(236,101,50,1);background: none;border: 1px solid #C5C5C5;font-weight: bold;">
						海南专线
					</view>
					<view class="choose-item">
						云南专线
					</view>
					<view class="choose-item">
						贵州专线
					</view>
					<view class="choose-item">
						港澳专线
					</view>
					<view class="choose-item">
						桂林专线
					</view>
					<view class="choose-item">
						四川专线
					</view>
			</view>
		</view>
		<view class="top-top1">
			<view class="top-title">签约分类
			<view class="title-line"></view></view>
				<view class="choose">
					<view class="choose-item" style="color:rgba(236,101,50,1);background: none;border: 1px solid #C5C5C5;font-weight: bold;">
						已签约
					</view>
					<view class="choose-item">
						未签约
					</view>
			</view>
		</view>
		<view class="top-top2">
			<view class="top-title">供应商区域
			<view class="title-line"></view></view>
				<view class="choose">
					<view class="choose-item" style="color:rgba(236,101,50,1);background: none;border: 1px solid #C5C5C5;font-weight: bold;">
						海南
					</view>
					<view class="choose-item">
						云南
					</view>
					<view class="choose-item">
						湖北
					</view>
					<view class="choose-item">
						福建
					</view>
					<view class="choose-item">
						四川
					</view>
					<view class="choose-item">
						陕西
					</view>
					<view class="choose-item">
						安徽
					</view>
					<view class="choose-item">
						河南
					</view>
			</view>
		</view>
		<view class="bottom">
			<view class="choose">
					<view class="choose-item1" style="color: rgba(161,161,161,1);background: rgba(242,242,242,1);">
						重置
					</view>
					<view class="choose-item1" style="color: rgba(50,50,50,1);background: rgba(255,209,1,1);font-weight: bold;">
						确认
					</view>
			</view>
		</view>
	</view> 
	<view style="width:100%;height:130rpx"></view>
	<view class="navbar">
		<view class="navbar_item" bindtap="intoPathRedirect" data-path="/pages/index/index">
			<view class="nav_img">
				<image src="../../image/index-icon3.png"></image>
			</view>
			<view class="text this-text">微店</view>
		</view>
		<view class="navbar_item" bindtap="intoPathRedirect" data-path="/pages/peer/peer">
			<view class="nav_img">
				<image src="../../image/index-icon4.png"></image>
			</view>
			<view class="text">同行</view>
		</view>
		<view class="navbar_item" bindtap="intoPathRedirect" data-path="/pages/micro/micro">
			<view class="nav_img">
				<image src="../../image/index-icon6.png"></image>
			</view>
			<view class="text">首页</view>
		</view>
		<view class="navbar_item" bindtap="intoPathRedirect" data-path="/pages/order/order">
			<view class="nav_img">
				<image src="../../image/index-icon5.png" ></image>
			</view>
			<view class="text">订单</view>
		</view>
		<view class="navbar_item">
			<view class="nav_img">
				<image src="../../image/index-icon7.png" ></image>
			</view>
			<view class="text">我的</view>
		</view>
	</view>
</view>
