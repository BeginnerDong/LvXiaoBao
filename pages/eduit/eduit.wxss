.eduit{
	width: 100%;
	height: 400px;
}
.peo-name{
	width: 100%;
	height: 50px;
	display: flex;
	padding: 0 3%;
	
}
.peo-con{
	width: 30%;
	height: 50px;
	font-size: 16px;
	color: rgba(50,50,50,1);
	opacity: 1;
	font-weight: bold;
}
.peo-content{
	width: 70%;
	height: 50px;
	display: flex;
}
.peo-content input{
	width: 60%;
	height: 40px;
	border: none;
	font-size: 10px;
	color: #A1A1A1;
	opacity: 1;
}
.card-img{
	width: 20%;
	height: 50px;
	text-align:right;
	margin-right: 15%;
}
.card{
	width: 80%;
	
}
.card input{
	width: 60%;
	height: 40px;
	border: none;
	font-size: 14px;
	color: #A1A1A1;
	opacity: 1;
	
}
.card-img image{
	width: 20px;
	height: 20px;
}

.peo-content1{
	font-size: 14px;
	color: #A1A1A1;
}
.btn{
	width: 90%;
	height: 50px;
	background: #FF582B;
	color: white;
	text-align: center;
	border-radius: 30px;
	line-height: 50px;
	margin-left: 5%;
	opacity: 0.3;
}