.bg{
	width: 100%;
	height: 200px;
	background: #FFC900;
	z-index: 111;
}
.login-title{
	width: 90%;
	height: 450px;
	margin-left: 5%;
	position: fixed;
	top: 10%;
	background: white;
	border-radius: 10px;
	z-index: 222;
	box-shadow:0px 20px 20px 0px rgba(0, 0, 0, 0.08);
}
.login-top{
	width: 100%;
	height: 80px;
	display: flex;
	padding-top: 5%;
	padding-left: 5%;
}
.login-logo{
	width: 70px;
	height: 70px;
	border-radius: 50%;
	text-align: center;
	line-height: 70px;
	box-shadow:0px 2px 3px 0px rgba(222,222,222,1);
	color: #ED6533;
	font-weight: bold;
}
.logo-con{
	margin-top: 13px;
	margin-left: 5%;
	font-weight: bold;
	font-size: 20px;
	color: #262628;
}
.login-cneter{
	width: 90%;
	height: 80px;
	margin-left: 5%;
	padding-top: 5%;
}
.cen-top{
	color: #333333;
	font-size: 16px;
	font-weight: bold;
	margin-left: 3%;
}
.cen-inp{
	width: 100%;
	height: 50px;
	margin-top: 10px;
}
.cen-inp input{
	width: 280px;
	height: 48px;
	border-radius: 25px;
	background: #F4F3F3;
	border: 1px solid white;
	font-size: 14px;
	line-height: 48px;
}
.cen-inp input[placeholder]{
	padding-left: 5%;
}

.login-btn{
	width: 100%;
	height: 50px;
	margin-top: 40px;
}
.login-btn span{
	width: 300px;
	height: 48px;
	display: inline-block;
	background: #FFC900;
	color: #323232;
	font-size: 17px;
	text-align: center;
	line-height: 48px;
	border-radius: 30px;
	margin-left: 5%;
	font-weight: bold;
}
.register{
	width: 100%;
	height: 40px;
	text-align: center;
	font-size: 17px;
	color: #585858;
	position: fixed;
	bottom: 0;
	font-weight: 500;
}
.register span{
	color: #ED6533;
}