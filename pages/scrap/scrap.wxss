page{
	background: #E7E7E7;
}
.scrap{
  padding:40rpx 5%;
	height: 600rpx;
	background: white;
}
textarea{
	width: 100%;
	height: 100%;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #333;
}
textarea[placeholder="系统将自动黏贴剪贴板信息到此输入框,点击保存自动识别"]{
	font-size:32rpx;
	overflow: hidden;
	font-weight:500;
}

.scrap-btn{
	width: 90%;
	height:100rpx;
	background:linear-gradient(90deg,rgba(255,88,43,1) 0%,rgba(255,123,87,1) 100%);
	color: white;
	text-align: center;
	border-radius: 60rpx;
	line-height: 100rpx;
	margin-left: 5%;
	opacity: 0.3;
	margin:80rpx auto;
	font-size: 32rpx;
	font-weight: bold;
}