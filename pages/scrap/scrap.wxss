page{
	background: #E7E7E7;
}
.scrap{
	width: 100%;
	height: 300px;
	background: white;
}
textarea{
	width: 90%;
	height: 280px;
	background: white;
	padding-left: 5%;
}
textarea[placeholder="系统将自动黏贴剪贴板信息到此输入框,点击保存自动识别"]{
	font-size:14px;
	color: #A1A1A1;
	overflow: hidden;
	margin-right: 5%;
	font-weight:500;
	padding-top: 10px;
}


.scrap-btn{
	width: 90%;
	height: 50px;
	background:linear-gradient(90deg,rgba(255,88,43,1) 0%,rgba(255,123,87,1) 100%);
	color: white;
	text-align: center;
	border-radius: 30px;
	line-height: 50px;
	margin-left: 5%;
	opacity: 0.3;
	margin-top: 10%;
	font-size: 14px;
	font-weight: bold;
}