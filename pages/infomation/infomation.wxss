.tourist{
	width: 100%;
	height: 800rpx;
	padding-top: 2%;
	z-index: 111;
}
.saler{
	width:87%;
	margin: 0 auto;
	background: #fff;
	box-shadow:0px 4rpx 6rpx 0px rgba(222,222,222,1);
	border-radius:24rpx;
	height:160rpx;
	margin-top: 48rpx;
	padding: 1%;
}
.phone{
	width:80rpx;
	height:80rpx;
	border-radius:50%;
	display: flex;
	align-items: center;
	justify-content: center;
}
.phone image{
	width:40rpx;
	height:40rpx;
}
.left{
	width: 15%;
}
.left-img{
	width: 100%;
	height: 60rpx;
	text-align: center;
}
.left-img image{
	width:30rpx;
	height:30rpx;
}
.left-name{
	width: 100%;
	text-align: center;
	font-size:24rpx;
	font-family:PingFang-SC-Medium;
	font-weight:500;
	color:#585858;
}
.middle{
	width:60%
}
.middle image{
	width:24rpx;
	height:24rpx
}
.right{
	width:25%
}
.phoneCall{
	width: 100%;
	height:100%;
	position: fixed;
	top:0;
	background:rgba(0,0,0,1);
	opacity:0.6;
	z-index:9999
}
.card{
	width:100%;
	font-size: 28rpx;
	color: #A1A1A1;
	margin-top: 4%;
}
.bottom{
	width: 100%;
	height: 100rpx;
	display: flex;
	position: fixed;
	bottom: 0;
	background: white;
}
.bottom-left{
	width: 60%;
	height:100rpx;
	display: flex;
}
.bott{
	width: 30%;
	text-align: center;
	margin-top: 3%;
}
.left-img{
	width: 100%;
	height: 40rpx;
}
.left-img image{
	width: 40rpx;
	height: 40rpx;
}
.left-cn{
	font-size: 24rpx;
	color: #323232;
	margin-top: 1%;
}
.bott-btn{
	width: 40%;
	height: 80rpx;
	color: white;
	background:linear-gradient(90deg,rgba(255,88,43,1) 0%,rgba(255,123,87,1) 100%);
	text-align: center;
	line-height: 80rpx;
	border-radius: 60rpx;
	font-size: 34rpx;
	margin-top: 1%;
	margin-right: 4%;
}
.visi{
	width: 100%;
	height: 80%;
	position: fixed;
	bottom:20%;
	background: #000000;
	opacity: 0.6;
	z-index: 222;
}
.visitors{
	width: 100%;
	height: 20%;
	position: fixed;
	bottom:0%;
	background: #E7E7E7;
}
.visi-name{
	width: 100%;
	height: 84rpx;
	font-size: 32rpx;
	color: #323232;
	padding: 0 3%;
	line-height: 84rpx;
	border-bottom: 2rpx solid white;
}
.visi-name1{
	width: 100%;
	height: 90rpx;
	display: flex;
	line-height: 90rpx;
	justify-content: center;
	border-bottom: 2rpx solid white;
}
.visi-titlw{
	width: 50%;
	height: 100rpx;
	font-size: 32rpx;
	color: #323232;
	padding: 0 3%;
}
.visi-img{
	width: 50%;
	height: 100rpx;
	text-align: center;
}
.visi-img image{
	width: 40rpx;
	height: 40rpx;
}