
.login{
	width: 100%;
	height: 300px;
	background: #FFC900;
}
.login-name{
	width: 100%;
	height: 30px;
	line-height: 30px;
	text-align: center;
	color: #323232;
	padding-top: 10px;
	
}
.login-title{
	width: 90%;
	height: 450px;
	margin-left: 5%;
	position: fixed;
	top: 10%;
	background: white;
	border-radius: 10px;
	box-shadow:0px 20px 20px 0px rgba(0, 0, 0, 0.08);
}
.login-top{
	width: 100%;
	height: 100px;
	display: flex;
	padding-top: 5%;
	padding-left: 10%;
}
.login-logo{
	width: 70px;
	height: 70px;
	border-radius: 50%;
	text-align: center;
	line-height: 70px;
	box-shadow:0px 2px 3px 0px rgba(222,222,222,1);
	color: #ED6533;
}
.logo-con{
	margin-top: 13px;
	margin-left: 5%;
	font-weight: bold;
	color: 20px;
}
.login-cneter{
	width: 90%;
	height: 60px;
	margin-left: 10%;
	margin-top: 30px;
}
.cen-top{
	color: #333333;
	font-size: 16px;
	font-weight: bold;
}
.cen-inp{
	width: 90%;
	height: 50px;
	margin-top: 10px;
}
.cen-inp input{
	width: 250px;
	height: 40px;
	border-radius: 20px;
	background: #F4F3F3;
	border: 1px solid white;
	font-size: 14px;
}
.cen-inp input[placeholder]{
	padding-left: 5%;
}
.cen-img{
	width: 20%;
}
.cen-input{
	width: 100%;
	height: 50px;
	display: flex;
}
.ceinp{
	width: 80%;
	height: 50px;
}
.ceinp input{
	width: 300px;
	height: 40px;
	border-radius: 20px;
	background: #F4F3F3;
	border: 1px solid white;
	font-size: 10pt;
}
.cen-img image{
	width: 30px;
	height: 20px;
	border: 1px dashed #F4F3F3;
	background: #000000;
}
.login-btn{
	width: 100%;
	height: 50px;
	margin-top: 40px;
}
.login-btn span{
	width: 300px;
	height: 48px;
	display: inline-block;
	background: #FFC900;
	color: #323232;
	font-size: 17px;
	text-align: center;
	line-height: 48px;
	border-radius: 30px;
	margin-left: 5%;
	font-weight: bold;
}
.pwd{
	width: 100%;
	height: 40px;
	text-align: center;
	font-size: 17px;
	color: #585858;
	position: fixed;
	bottom: 0;
	font-weight: 500;
}
