	display: flex;
  padding:20rpx;
}
.top{
	width: 50%;
}
.top-img{
	width: 100%;
}
.top-img image{
	width: 340rpx;
	height: 440rpx;
  display: block;
  margin: 0 auto;
}
.top-name{
	width: 100%;
	height:40rpx;
	text-align: center;
	color: #323232;
	font-size: 32rpx;
