.title{
	width: 100%;
	height: 270px;
	display: flex;
}
.top{
	width: 45%;
	height: 250px;
	margin-left: 4%;
	margin-top: 10px;
}
.top-img{
	width: 100%;
	height: 220px;
}
.top-img image{
	width: 170px;
	height: 220px;
}
.top-name{
	width: 100%;
	height: 20px;
	text-align: center;
	color: #323232;
	font-size: 16px;
	margin-top: 10px;
	font-weight: 500;
}
.btn{
	width: 100%;
	height: 50px;
}
.btn span{
	width: 350px;
	height: 50px;
	text-align: center;
	line-height: 50px;
	display: inline-block;
	background: #FF582B;
	color: white;
	border-radius: 30px;
	margin-left: 5%;
	margin-top: 5%;
}