.btn{
	width: 100%;
}
.btn span{
	width: 80%;
	height: 88rpx;
	text-align: center;
	line-height: 88rpx;
	display: block;
	background: #FF582B;
	color: white;
	border-radius: 60rpx;
  margin: 80rpx auto;
  font-size: 32rpx;
}