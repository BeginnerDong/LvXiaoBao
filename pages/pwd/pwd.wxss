	width: 100%;
	height: 100rpx;
	margin-top: 40rpx;
}
.forget-btn span{
	width: 600rpx;
	height: 100rpx;
	display: inline-block;
	background:linear-gradient(90deg,rgba(255,201,0,1) 0%,rgba(255,227,0,1) 100%);
	color: #323232;
	font-size: 34rpx;
	text-align: center;
	line-height:100rpx;
