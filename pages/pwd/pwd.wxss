.logo{
	width: 90%;
	height: 500px;
	border-radius: 10px;
	margin-left: 5%;
	background: #DBDBDB;
	box-shadow:0px 2px 3px 0px rgba(222,222,222,1);
	margin-top: 20px;
}
.login{
	width: 100%;
	height: 30px;
	padding: 5%;
	color: #FFFFFF;
	font-size: 20px;
	text-align: center;
}
.login-title{
	width: 100%;
	height: 200px;
}
.forget{
	width: 100%;
	height: 40px;
	color: #262628;
	font-size: 20px;
	padding-left: 3%;
}
.forget-inp{
	width: 100%;
	height: 40px;
	
}
.forget-inp input{
	width: 90%;
	height: 40px;
	padding-left: 5%;
	font-size: 10pt;
	border-radius: 20px;
	background: #F4F3F3;
	line-height: 30px;
	margin-left: 2%;
}
.forget-input{
	width: 100%;
	height: 40px;
	display: flex;
	margin-top: 20px;
	margin-left: 2%;
}
.text{
	width: 65%;
	height: 40px;
}
.text input{
	width: 300px;
	height: 40px;
	padding-left: 5%;
	font-size: 10pt;
	border-radius: 20px;
	background: #F4F3F3;
	line-height: 30px;
}
.gain{
	width: 30%;
	height: 40px;
	border-radius: 20px;
	background: #F4F3F3;
	line-height: 40px;
}
.gain span{
	background: #F4F3F3;
	font-size: 10pt;
}
.forget-btn{
	width: 100%;
	height: 50px;
	margin-top: 20px;
}
.forget-btn span{
	width: 300px;
	height: 50px;
	display: inline-block;
	background: #FFC900;
	color: #323232;
	font-size: 17px;
	text-align: center;
	line-height: 50px;
	border-radius: 30px;
	margin-left: 5%;
}
