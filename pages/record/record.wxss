.record{
	width: 100%;
	height: 50px;
	display: flex;
}
.record-name{
	width: 20%;
	margin-top: 10px;
	height: 40px;
	line-height: 40px;
	volume: #323232;
	font-size: 15px;
	font-weight: 500;
	padding-left: 3%;
	color: #323232;
	font-weight: bold;
	font-family:PingFang-SC-Bold;
	color:rgba(50,50,50,1);
	position: relative;
	z-index:1;
	border-bottom: 1px solid #E7E7E7;
}
.title-line {
	width: 16px;
	height: 3px;
	background: rgba(255, 209, 1, 1);
	border-radius: 2px;
	position:absolute;
	z-index:-1;
	left:14%;
	bottom: 11px;
}
.left-name{
	width: 70%;
	height: 20px;
	line-height: 20px;
	color: #333333;
	font-size: 15px;
	font-weight: 500;
}
.reco{
	width: 100%;
	height: 50px;
	background: #F4F3F3;
	display: flex;
	line-height: 50px;
	padding-left: 3%;
}
.reco-left{
	width: 70%;
	height: 50px;
	color: #585858;
	font-size: 15px;
}
.reco-right{
	width: 30%;
	height: 50px;
	color: rgba(88,88,88,1);
	font-size: 15px;
	margin-right: 5%;
	font-weight: bold;
}
.recor{
	width: 100%;
	height: 55px;
	padding-top: 4%;
	padding-left: 3%;
	background: #FFFFFF;
	border-bottom: 1px solid #E7E7E7;
	display: flex;
}
.reco-left{
	width: 70%;
	text-align: left;
}
.left-namea{
	font-size: 12px;
	margin-top: 5px;
	color: #A1A1A1;
	font-weight: 400;
}
.recor-right{
	width: 30%;
	text-align: right;
	margin-right: 10%;
	font-size: 20px;
	font-weight: bold;
	color: #585858;
}