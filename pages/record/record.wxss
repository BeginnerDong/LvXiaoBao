.record{
	width: 100%;
	height: 50px;
	display: flex;
}
.record-name{
	width: 20%;
	margin-top: 10px;
	height: 40px;
	line-height: 40px;
	volume: #323232;
	font-size: 15px;
	font-weight: 500;
	padding-left: 3%;
}
.left-name{
	width: 70%;
	height: 20px;
	line-height: 20px;
	color: #333333;
	font-size: 15px;
	font-weight: 500;
}
.reco{
	width: 100%;
	height: 50px;
	background: #F4F3F3;
	display: flex;
	line-height: 50px;
	padding-left: 3%;
}
.reco-left{
	width: 70%;
	height: 50px;
	color: #585858;
	font-size: 15px;
}
.reco-right{
	width: 30%;
	height: 50px;
	color: rgba(88,88,88,1);
	font-size: 15px;
	margin-right: 5%;
	font-weight: bold;
}
.recor{
	width: 100%;
	height: 55px;
	padding-top: 4%;
	padding-left: 3%;
	background: #FFFFFF;
	border-bottom: 1px solid #E7E7E7;
	display: flex;
}
.reco-left{
	width: 80%;
}
.left-namea{
	font-size: 10px;
	margin-top: 5px;
	color: #A1A1A1;
}
.recor-right{
	width: 20%;
}