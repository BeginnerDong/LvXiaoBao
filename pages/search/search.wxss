page{
	background: #F4F3F3;
}
.top{
	width:100%;

}
.search{
	width:100%;
	padding: 20rpx 0;
}
.search input{
	width:60%;
	background: #fff;
	border-radius:40rpx;
	height:80rpx;
	padding: 0 2.5%;
	position: relative;
	margin-left: 5%;
	font-size:28rpx;
	font-family:PingFang-SC-Medium;
	font-weight:500;
	color:rgba(192,192,192,1);
	border-radius: 20px 0px 0px 20px;
}
.searchBtn{
	width:15%;
	height:80rpx;
	background:#FFD101;
	border-radius:0px 20px 20px 0px;
	
	display:flex;
	align-items:center;
	justify-content: center;
	z-index: 99;
}
.searchBtn image{
	width:40rpx;
	height:40rpx;
}

.title{
	font-size:32rpx;
	font-family:PingFang-SC-Bold;
	font-weight:bold;
	color:rgba(50,50,50,1);
	line-height:46rpx;
	position: relative;
	z-index:1
}
.title-line{
	width:32rpx;
	height:6rpx;
	background:rgba(255,209,1,1);
	border-radius:4rpx;
	position: absolute;
	bottom:5rpx;
	z-index:-1
}
.choose{
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;

	
}
.choose-item{
	width:200rpx;
	height:64rpx;
	border:1px solid #c5c5c5;
	border-radius:8px;
	line-height: 64rpx;
	font-size:14px;
	font-family:PingFang-SC-Medium;
	font-weight:500;
	color:#A1A1A1;
	text-align: center;
	margin: 24rpx 0 0 0;
	background: #fff;
}
.size{
	width:700rpx;
	margin: 0 auto;
	margin-top: 20rpx;
}
