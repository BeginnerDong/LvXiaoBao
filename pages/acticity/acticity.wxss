}
.acti{
	width: 90%;
	height: 350px;
	background: white;
	margin-left: 5%;
	margin-top: 20px;
	border-radius: 10px;
}
.acti-top{
	width: 100%;
	height: 50px;
	display: flex;
	border-bottom: 1px solid #E7E7E7;
}
.top-name{
	width: 80%;
	height: 50px;
	line-height: 50px;
	padding-left: 3%;
	font-size:15px;
	font-family:PingFang-SC-Bold;
	font-weight:bold;
	color:rgba(50,50,50,1);
	position: relative;
	z-index:1;
}
.title-line {
	width: 16px;
	height: 3px;
	background: rgba(255, 209, 1, 1);
	border-radius: 2px;
	position:absolute;
	z-index:-1;
	left:5%;
	bottom: 17px;
}
.top-right{
	width: 20%;
	height: 50px;
	line-height: 50px;
	display: flex;
}
.right-img{
	width: 50%;
	height: 50px;
	line-height: 50px;
}
.right-img image{
	width: 20px;
	height: 20px;
}
.activi{
	width: 100%;
	height: 50px;
	line-height: 50px;
	padding-left: 3%;
	display: flex;
	border-bottom: 1px solid #E7E7E7;
}
.name{
	width: 40%;
	font-size:14px;
	font-family:PingFang-SC-Medium;
	font-weight:500;
	color:rgba(88,88,88,1);
}
.title{
	width: 60%;
	font-size:16px;
	font-family:PingFang-SC-Bold;
	font-weight:bold;
	color:rgba(50,50,50,1);
}
.btn{
	width: 100%;
	height: 50px;
	position: fixed;
	bottom: 0;
}
.all{
	width:327px;
	height:40px;
	background:linear-gradient(90deg,rgba(255,88,43,1) 0%,rgba(255,123,87,1) 100%);
	border-radius:20px;
	display: flex;
}
.btn-img{
	width: 40%;
	height: 40px;
	line-height: 40px;
	text-align: right;
	margin-top: 2px;
	margin-right: 10px;
}
.btn-img image{
	width:20px;
	height:20px;
}
.btn-name{
	width: 60%;
	height:40px;
	line-height: 40px;
