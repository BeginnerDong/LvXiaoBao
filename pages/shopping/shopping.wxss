.shop{
	width: 100%;
	margin-top: 5%;
}
.peo-name{
	width: 100%;
	height: 100rpx;
	display: flex;
	/* justify-content: center; */
	padding: 0 3%;
	line-height: 100rpx;
	border-bottom: 2rpx solid #E7E7E7;
}
.peo-con{
	width: 30%;
	height: 100rpx;
	font-size: 32rpx;
	color:#323232;
	opacity: 1;
	font-weight: 500;
}
.peo-content{
	width: 70%;
	height: 100rpx;
	display: flex;
	line-height: 100rpx;
}
.peo-content input{
	width: 69%;
	height: 98rpx;
	border: none;
	font-size: 28rpx;
	color: #A1A1A1;
	opacity: 1;
	line-height:98rpx;
}
.card-img{
	width: 20%;
	height: 100rpx;
	text-align:right;
	margin-right: 15%;
}
.card{
	width: 80%;
	
}
.card input{
	width: 60%;
	height: 80rpx;
	border: none;
	font-size: 28rpx;
	color: #A1A1A1;
	opacity: 1;
	
}
.card-img image{
	width: 40rpx;
	height: 40rpx;
}

.peo-content1{
	font-size: 28rpx;
	color: #323232;
	width: 70%;
	height: 100rpx;
	line-height: 100rpx;
}
.peo-content1 input{
	width: 69%;
	height: 98rpx;
	border: none;
	font-size: 28rpx;
	color: #A1A1A1;
	opacity: 1;
	line-height:98rpx;
}
.shop-btn{
	width: 100%;
  padding: 0 3%;
  box-sizing: border-box;
	height: 120rpx;
	background: white;
	display: flex;
	position: fixed;
	bottom: 0;
  justify-content:space-between;
  align-items: center;
  border-top:2rpx solid #e7e7e7;
}
.off{
	width: 48%;
	height: 88rpx;
	border-radius: 60rpx;
	color: #A1A1A1;
	opacity: 0.8;
	background: #F4F3F3;
	text-align: center;
	line-height: 88rpx;
	font-weight: 500;
	font-size: 32rpx;
}
.add{
	width: 48%;
	height: 88rpx;
	border-radius: 60rpx;
	color: white;
	background:linear-gradient(90deg,rgba(255,88,43,1) 0%,rgba(255,123,87,1) 100%);
	opacity: 1;
	text-align: center;
	line-height: 88rpx;
	font-weight: bold;
	font-size: 32rpx;
}